{
  "manifest_version": 3,
  "name": "Upwork Cover Letter AI",
  "version": "1.0.0",
  "description": "Generates personalized cover letters using AI and highlights recent Upwork jobs",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*.upwork.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.upwork.com/nx/search/jobs*",
        "https://www.upwork.com/nx/find-work*",
        "https://www.upwork.com/ab/find-work*"
      ],
      "js": [
        "utils/dateParser.js",
        "utils/jobExtractor.js",
        "content-scripts/jobsList.js",
        "content-scripts/jobDetailWorkflow.js"
      ],
      "css": ["styles/inject.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.upwork.com/ab/proposals/job/*",
        "https://www.upwork.com/nx/proposals/job/*"
      ],
      "js": [
        "utils/jobExtractor.js",
        "utils/templateEngine.js",
        "content-scripts/jobDetail.js",
        "content-scripts/jobDetailWorkflow.js"
      ],
      "css": ["styles/inject.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
